<style>
  footer {
    display: flex;
    flex-flow: row wrap;
    margin: 1em 0px;
  }

  @media screen and (min-width: 600px) {
    footer {
      justify-content: space-around;
    }
  }

  li {
    border: 0px;
    width: 220px;
    text-align: left;
    background-color: transparent;
    color: rgb(34, 34, 34);
    text-decoration: none;
    line-height: 2em;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
  }

  a {
    color: #222;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 1em;
  }
</style>
