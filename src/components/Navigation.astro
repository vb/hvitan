---
import Icon from './Icon.astro';

export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<nav id="navigation">
  <a href="/" class={title === 'Start' ? 'active' : ''}>Start</a>
  <a href="/barbershop" class={title === 'Barbershop' ? 'active' : ''}
    >Barbershop</a
  >
  <a href="/tattoo" class={title === 'Tattoo' ? 'active' : ''}>Tattoo</a>
  <a href="/om-hvitan" class={title === 'Om Hvitan' ? 'active' : ''}
    >Om Hvitan</a
  >
</nav>

<button id="mobile-btn" class="toggle-navigation">
  <Icon icon={'hamburger'} />
  <Icon icon={'close'} className="hidden" />
</button>

<script>
  const btn = document.getElementById('mobile-btn');
  btn.addEventListener('click', () => {
    const closeIcon = document.getElementById('close-icon');
    const hamburgerIcon = document.getElementById('hamburger-icon');
    const nav = document.getElementById('navigation');

    if (nav.classList.contains('mobile-visisble')) {
      nav.classList.remove('mobile-visisble');
      hamburgerIcon.classList.remove('hidden');
      closeIcon.classList.add('hidden');
    } else {
      closeIcon.classList.remove('hidden');
      hamburgerIcon.classList.add('hidden');
      nav.classList.add('mobile-visisble');
    }
  });

  window.addEventListener('resize', () => {
    const width = window.innerWidth;
    const nav = document.getElementById('navigation');

    if (width >= 600) {
      nav.classList.remove('mobile-visisble');
    }
  });
</script>

<style>
  nav {
    display: none;
  }

  a {
    padding: 2px 10px;
    display: block;
    font-size: 32px;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-decoration: none;
    margin: 5% 0;
  }

  a.active {
    background: #222;
    color: white;
  }

  .toggle-navigation {
    position: fixed;
    z-index: 2;
    background: rgb(34, 34, 34);
    bottom: 10px;
    right: 10px;
    appearance: none;
    border: none;
    padding: 10px;
    font-size: 20px;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    outline: none;
    cursor: pointer;
  }

  @media screen and (min-width: 600px) {
    .toggle-navigation {
      display: none;
    }
    nav {
      display: flex;
      justify-content: center;
      justify-content: space-between;
    }
    a {
      font-size: 18px;
    }
  }

  .mobile-visisble {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    background: #fff;
  }
</style>

<style is:global>
  .hidden {
    display: none;
  }
</style>
